/* components/movie/index.wxss */
.container {
  width: 200rpx;
  background-color: #fff;
  font-size: 24rpx;
}

.movie-img {
  width: 200rpx;
  height: 280rpx;
}

.title{
  margin: 10rpx 0 5rpx 0;
}

.rate-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
}

.rate-text {
  font-size: 20rpx;
  margin: 0 20rpx;
}

.container text {
  display: block;
  /*内联对象需加*/
  word-break: keep-all;
  /* 不换行 */
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis;
  /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}