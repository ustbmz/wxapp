/* pages/music-list/music-list.wxss */

.container{
    width: 100%;
    height: 100%;
    position: relative;
}

.top-bgimage{
    height: 320rpx;
    opacity: 0.4;
    filter:blur(40%);
}

.mask{
    width: 100%;
    position: absolute;
    background-color: #333;
    z-index: -1;
    top: 0;
    left: 0;
    height: 320rpx;
}

.avtor{
    height: 320rpx;
    position: absolute;
    top: 0rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    color: #fff;
}

.avtor-img{
    height: 260rpx;
    width: 260rpx;
    margin: 30rpx;
    margin-right: 30rpx;
    border-radius: 10rpx;
}